{
  "name": "skipkayhil.github.io",
  "private": true,
  "description": "Hartley McGuire's Portfolio Website",
  "version": "1.0.0",
  "author": "Hartley McGuire",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --history-api-fallback",
    "build": "webpack && yarn postbuild",
    "postbuild": "env PUPPETEER_PRODUCT=\"firefox\" react-snap",
    "prod": "serve build",
    "analyze": "webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json build",
    "lint": "eslint .",
    "deploy": "cd build && git add -A && git commit -m 'Deploy to master' && echo 'Run git push origin master to complete deploy'"
  },
  "reactSnap": {
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ],
    "fixWebpackChunksIssue": false
  },
  "dependencies": {
    "hyperapp": "^2.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-syntax-jsx": "^7.10.4",
    "@babel/plugin-transform-react-jsx": "^7.10.4",
    "babel-loader": "^8.1.0",
    "babel-plugin-jsx-pragmatic": "^1.0.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^4.2.1",
    "cssnano": "^4.1.10",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.10.0",
    "pnp-webpack-plugin": "^1.6.4",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "react-snap": "^1.23.0",
    "serve": "^11.3.2",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "resolutions": {
    "minimalcss": "0.9.0",
    "puppeteer": "2.1.1"
  }
}
